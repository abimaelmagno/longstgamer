
  <div class="card text-center">
  <div class="card-header">
   <h1>New Game</h1>
  </div> 
  <div class="card-body">
  <div class="d-inline-flex p-2 bd-highlight">
   <h2><%@letters.each do |letter|%></h2> 
     <ul class="d-flex justify-content-between">
     <li class="list-group-item list-group-item-primary"><%=letter.capitalize%></li>  
     </ul>
    <h2> <%end%> </h2>  
 </div>
 <h3>What is the longest word you can find?</h3> 
 <form action="/score" method="post">
  <input type="text" name="score" required= "true">
  <input type="submit" value="play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
 </form>
</div>
</div>
